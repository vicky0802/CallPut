<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/adView_activity_legs_banner"
        android:layout_alignParentTop="true">&gt;
        <RelativeLayout
            android:id="@+id/rl_activity_legs_fut_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_activity_legs_fut_topframe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#dfdfbd"
                android:padding="5sp">

                <ImageView
                    android:id="@+id/img_activity_legs_fut_payoff"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:background="#151515"
                    android:padding="1sp" />

                <TextView
                    android:id="@+id/tv_activity_legs_fut_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_toRightOf="@+id/img_activity_legs_fut_payoff"
                    android:text="-"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_activity_legs_fut_filler_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_toRightOf="@+id/tv_activity_legs_fut_stock"
                    android:text="-"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_activity_legs_fut_strategy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_toRightOf="@+id/tv_activity_legs_fut_filler_1"
                    android:text=""
                    android:textColor="#151515" />

                <LinearLayout
                    android:id="@+id/ll_activity_legs_fut_riskprofit_frame"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_below="@+id/tv_activity_legs_fut_strategy"
                    android:layout_marginLeft="10sp"
                    android:layout_toRightOf="@+id/img_activity_legs_fut_payoff"
                    android:gravity="center_vertical"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/tv_activity_legs_fut_risk_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.27"
                        android:background="#ff6c6c"
                        android:padding="5sp"
                        android:text="Risk"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_activity_legs_fut_risk_val"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.23"
                        android:background="@drawable/border_red"
                        android:gravity="right"
                        android:padding="5sp"
                        android:text="-"
                        android:textColor="#ff6c6c"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_activity_legs_fut_gain_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="0.27"
                        android:background="#00934a"
                        android:padding="5sp"
                        android:text="Gain"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_activity_legs_fut_gain_val"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.23"
                        android:background="@drawable/border_green"
                        android:gravity="right"
                        android:padding="5sp"
                        android:text="-"
                        android:textColor="#00934a"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_activity_legs_fut_legcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_activity_legs_fut_riskprofit_frame"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5sp"
                    android:text=""
                    android:textColor="#151515"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_activity_legs_fut_short_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_activity_legs_fut_riskprofit_frame"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:text=""
                    android:textColor="#151515"
                    android:textSize="12sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_activity_legs_fut_breakeven_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_activity_legs_fut_topframe"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="Breakeven Dn"
                    android:textColor="#151515"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="Breakeven Up"
                    android:textColor="#151515"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_activity_legsbreakeven_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_activity_legs_fut_breakeven_text"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_activity_legs_fut_breakdown_val"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#151515" />

                <TextView
                    android:id="@+id/tv_activity_legs_fut_breakup_val"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#151515" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_activity_legs_fut_totalrs_lot_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_activity_legsbreakeven_val"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_activity_legs_fut_totinvest_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="Total Investment"
                    android:textColor="#151515"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="Lot Size"
                    android:textColor="#151515"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_activity_legs_fut_totalrs_lot_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_activity_legs_fut_totalrs_lot_text"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_activity_legs_fut_invest_val"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#151515" />

                <TextView
                    android:id="@+id/tv_activity_legs_fut_lotsize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#151515" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_activity_legs_fut_subscription_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_activity_legs_fut_totalrs_lot_val"
                android:layout_marginTop="10sp"
                android:background="#ffd700"
                android:padding="10sp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/img_activity_legs_fut_lock"
                    android:layout_width="18sp"
                    android:layout_height="18sp"
                    android:src="@drawable/lockclosed" />

                <TextView
                    android:id="@+id/tv_activity_legs_fut_subs_premium_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Premium Gold Strategy"
                    android:textColor="#151515"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_activity_legs_fut_subs_subs2see_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_activity_legs_fut_subs_premium_txt"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:text="Buy to see position legs of this strategy"
                    android:textColor="#151515"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_activity_legs_fut_subs_amt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_activity_legs_fut_subs_subs2see_txt"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#151515"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_activity_leg_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_activity_legs_fut_subs_amt"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10sp"
                    android:onClick="onBuyButtonClicked"
                    android:text="Buy Now"
                    android:textColor="#151515" />

                <TextView
                    android:id="@+id/tv_activity_legs_fut_timer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_activity_leg_buy"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#b22222"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_activity_legs_fut_legs_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_activity_legs_fut_totalrs_lot_val"
                android:layout_marginTop="10sp"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:id="@+id/separator_activity_legs_fut_1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:id="@+id/ll_activity_legs_fut_legs_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f1f1eb"
                    android:orientation="horizontal"
                    android:padding="5sp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.35"
                        android:text="B/S" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.29"
                        android:gravity="center"
                        android:text="Option Legs" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.36"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="₹" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:background="@android:color/darker_gray" />

                        <ImageView
                            android:id="@+id/img_activity_legs_fut_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/editicon" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/separator_activity_legs_fut_2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:id="@+id/ll_activity_legs_fut_legs1_val"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_activity_legs_fut_legs_heading"
                    android:orientation="horizontal"
                    android:padding="5sp"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/tv_activity_legs_fut_leg1_buysell"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:text=""
                        android:textColor="#151515" />

                    <TextView
                        android:id="@+id/tv_activity_legs_fut_leg1_optionid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.29"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#151515" />

                    <TextView
                        android:id="@+id/tv_activity_legs_fut_leg1_premium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.36"
                        android:gravity="right"
                        android:text=""
                        android:textColor="#151515" />
                </LinearLayout>

                <View
                    android:id="@+id/separator_activity_legs_fut_3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:id="@+id/ll_activity_legs_fut_legs2_val"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_activity_legs_fut_legs1_val"
                    android:orientation="horizontal"
                    android:padding="5sp"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/tv_activity_legs_fut_leg2_buysell"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:text=""
                        android:textColor="#151515" />

                    <TextView
                        android:id="@+id/tv_activity_legs_fut_leg2_optionid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.29"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#151515" />

                    <TextView
                        android:id="@+id/tv_activity_legs_fut_leg2_premium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.36"
                        android:gravity="right"
                        android:text=""
                        android:textColor="#151515" />
                </LinearLayout>

                <View
                    android:id="@+id/separator_activity_legs_fut_4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:id="@+id/ll_activity_legs_fut_legs3_val"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_activity_legs_fut_legs2_val"
                    android:orientation="horizontal"
                    android:padding="5sp"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/tv_activity_legs_fut_leg3_buysell"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:text=""
                        android:textColor="#151515" />

                    <TextView
                        android:id="@+id/tv_activity_legs_fut_leg3_optionid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.29"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#151515" />

                    <TextView
                        android:id="@+id/tv_activity_legs_fut_leg3_premium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.36"
                        android:gravity="right"
                        android:text=""
                        android:textColor="#151515" />
                </LinearLayout>

                <View
                    android:id="@+id/separator_activity_legs_fut_5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:id="@+id/ll_activity_legs_fut_legs4_val"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_activity_legs_fut_legs3_val"
                    android:orientation="horizontal"
                    android:padding="5sp"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/tv_activity_legs_fut_leg4_buysell"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:text=""
                        android:textColor="#151515" />

                    <TextView
                        android:id="@+id/tv_activity_legs_fut_leg4_optionid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.29"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#151515" />

                    <TextView
                        android:id="@+id/tv_activity_legs_fut_leg4_premium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.36"
                        android:gravity="right"
                        android:text=""
                        android:textColor="#151515" />
                </LinearLayout>

                <View
                    android:id="@+id/separator_activity_legs_fut_6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:id="@+id/separator_activity_legs_fut_7"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/rl_activity_legs_fut_subscription_frame"
                android:layout_marginTop="10sp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/tv_activity_legs_fut_payoff_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separator_activity_legs_fut_7"
                android:background="#f1f1eb"
                android:padding="5sp"
                android:text="Payoff Chart" />

            <View
                android:id="@+id/separator_activity_legs_fut_8"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_activity_legs_fut_payoff_head"
                android:background="@android:color/darker_gray" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/linechart_activity_legs_fut_payoff"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/separator_activity_legs_fut_8"
                android:layout_marginTop="10dp" />

            <ImageView
                android:id="@+id/img_activity_leg_stocklocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separator_activity_legs_fut_8"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/location" />

            <View
                android:id="@+id/separator_activity_legs_fut_9"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/linechart_activity_legs_fut_payoff"
                android:layout_marginTop="10sp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/tv_activity_legs_fut_pnl_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separator_activity_legs_fut_9"
                android:background="#f1f1eb"
                android:padding="5sp"
                android:text="Strategy Performance" />

            <View
                android:id="@+id/separator_activity_legs_fut_10"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_activity_legs_fut_pnl_head"
                android:background="@android:color/darker_gray" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/linechart_activity_legs_fut_pnl"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/separator_activity_legs_fut_10"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/tv_activity_legs_fut_spread_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_activity_legs_fut_subscription_frame"
                android:layout_alignParentLeft="true"
                android:text="Current Spread"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_activity_legs_fut_spread_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_activity_legs_fut_subscription_frame"
                android:layout_alignParentRight="true"
                android:text="13.25"
                android:visibility="gone" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/bar_activity_legs_fut_spread"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/tv_activity_legs_fut_spread_val"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_activity_legs_fut_interest_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bar_activity_legs_fut_spread"
                android:layout_alignParentLeft="true"
                android:text="Interest"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_activity_legs_fut_interest_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bar_activity_legs_fut_spread"
                android:layout_alignParentRight="true"
                android:text="-"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_activity_legs_fut_likelygain_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_activity_legs_fut_interest_val"
                android:layout_alignParentLeft="true"
                android:text="Likely Gain"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_activity_legs_fut_likelygain_val"
                android:layout_width="wrap_content"
