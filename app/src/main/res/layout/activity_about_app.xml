<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_activity_about_app_top_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-7dp"
        android:indeterminate="true"
        android:max="100"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/img_activity_about_app_logo"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ob" />

    <TextView
        android:id="@+id/tv_activity_about_app_name"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/img_activity_about_app_logo"
        android:gravity="center_vertical"
        android:text="Call Put Analyzer"
        android:textColor="#151515"
        android:textSize="20sp" />

    <View
        android:id="@+id/separator_activity_about_app_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/img_activity_about_app_logo"
        android:layout_marginTop="10sp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tv_activity_about_app_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separator_activity_about_app_1"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:text="" />

    <TextView
        android:id="@+id/tv_activity_about_app_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_activity_about_app_version"
        android:layout_marginTop="10sp"
        android:enabled="true"
        android:focusable="true"
        android:gravity="center_horizontal"
        android:longClickable="true"
        android:text=""
        android:textIsSelectable="true" />

    <TextView
        android:id="@+id/tv_activity_about_blist_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_activity_about_app_id"
        android:text="Blist Value"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_activity_about_blist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_activity_about_app_id"
        android:layout_alignParentRight="true"
        android:text="xxxxxxxxxxxxxxxxxxxxxxx"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_activity_about_reward_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_activity_about_blist_txt"
        android:text="Reward"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_activity_about_reward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_activity_about_blist_txt"
        android:layout_alignParentRight="true"
        android:text="x"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_activity_about_blist_count_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_activity_about_reward"
        android:text="Blist Rec count"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_activity_about_blist_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_activity_about_reward"
        android:layout_alignParentRight="true"
        android:text="x"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_activity_about_reward_count_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_activity_about_blist_count"
        android:text="Reward Rec count"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_activity_about_reward_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_activity_about_blist_count"
        android:layout_alignParentRight="true"
        android:text="x"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_activity_about_stgaccess_count_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_activity_about_reward_count"
        android:text="Strategy Access count"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_activity_about_stgaccess_count_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_activity_about_reward_count"
        android:layout_alignParentRight="true"
        android:text="x"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_activity_about_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5sp"
        android:text="App Terms &amp; Conditions"
        android:textStyle="bold" />
</RelativeLayout>
